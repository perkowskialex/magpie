<%- include('../partials/header') %>
<main>
<a href = 'expenses/new/:budgetid'><button method="POST" class="btn waves-effect waves-light" type="submit" name="action">Add Expense
  <i class="material-icons right">send</i></button></a>

<table id="list">
        <thead>
          <tr>
            <th>Date</th>
            <th>Value</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% expenses.forEach(function(e) { %>
            <tr>
              <td><%= e.name %></td>
              <td><%= e.value %></td>
              <td><%= e.description %></td>
              <td><a href="/<%= e.id %>"> <button class="btn waves-effect waves-light" type="submit" name="action">View Expense
                    <i class="material-icons right">send</i>
                  </button></a></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
</main>

<%- include('../partials/footer') %>